<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <LinearLayout
        android:id="@+id/contactsmyclubll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:weightSum="2" >

        <Button
            android:id="@+id/contactsbtn1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#4279bd"
            android:text="Contacts"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#ffffff" />

        <Button
            android:id="@+id/appFrends1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#4279bd"
            android:text="App Friends"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:visibility="gone" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:visibility="gone" />

        <Button
            android:id="@+id/myclubbtn1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#4279bd"
            android:text="Clubs"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/searchfromlist1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactsmyclubll1"
        android:layout_margin="5dp"
        android:hint="Search"
        android:textSize="15sp" />
    
    <TextView
        android:id="@+id/validmobiletxt1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchfromlist1"
        android:layout_gravity="center"
        android:gravity="center"
        
        android:text="(Select a club from below)"
        android:textColor="#9e9e9e"
        android:textSize="11sp" />

    <LinearLayout
        android:id="@+id/contactsearchll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/newclubsendll"
        android:layout_below="@+id/validmobiletxt1"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/clubcontactslistll1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:visibility="gone" >

            <ListView
                android:id="@+id/contactslist1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >
            </ListView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainclublistll1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:weightSum="2" >

            <LinearLayout
                android:id="@+id/ownclubsll"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/createnewclubbtn"
                    android:gravity="center"
                    android:text="My Clubs"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <ListView
                    android:id="@+id/listMyclubs1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF" >
                </ListView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/memberclubsll1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/createnewclubbtn"
                    android:gravity="center"
                    android:text="Clubs I&apos;m Member of"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <ListView
                    android:id="@+id/listMembersclubs1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF" >
                </ListView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/newclubsendll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/donebtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#4279bd"
            android:text="Done"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>