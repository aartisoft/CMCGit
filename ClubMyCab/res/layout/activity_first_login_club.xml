<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutRateCharge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED" >

    <LinearLayout
        android:id="@+id/linearLayoutFLCTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textMessageFirstLoginClub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:layout_weight="20"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/listViewFirstLoginClubs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="80" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFLCBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/buttonFLCCreateClub"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/createnewclubbtn"
            android:text="@string/button_flc_create_club"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonFLCContinue"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="#E99D1A"
            android:text="@string/button_flc_continue"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>