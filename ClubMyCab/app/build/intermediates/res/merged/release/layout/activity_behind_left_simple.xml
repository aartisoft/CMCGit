<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/leftBehindMenuScroll"
    android:background="#ffffff"
    >

    <LinearLayout
        android:id="@+id/drawerlayout"
        style="@style/behindMenuScrollContent"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/color_blue"
            android:orientation="horizontal"
            android:gravity="left|center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="5dp"
            >
           <!-- <com.clubmycab.CircularImageView
                android:id="@+id/drawerprofilepic"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerVertical="true"
                android:background="@drawable/avatar_drawer"

                />-->
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/drawerprofilepic"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerVertical="true"
                android:src="@drawable/avatar_drawer"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="8dp">
                <TextView
                    android:id="@+id/drawerusername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/tvMobNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />
            </LinearLayout>





        </LinearLayout>
        <FrameLayout
            android:id="@+id/myclubslayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/group"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/myclubs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Groups"
                android:layout_marginLeft="72dp"
                android:textSize="@dimen/drawer_font_text"
                android:textColor="@color/color_app_text_dark"
                android:layout_gravity="center_vertical"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/mywalletslayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wallets"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/mywallets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet"
                android:layout_marginLeft="72dp"
                android:textSize="@dimen/drawer_font_text"
                android:textColor="@color/color_app_text_dark"
                android:layout_gravity="center_vertical"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/sharelocationlayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/here_i_am"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/sharemylocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share my location"
                android:layout_marginLeft="72dp"
                android:textSize="@dimen/drawer_font_text"
                android:textColor="@color/color_app_text_dark"
                android:layout_gravity="center_vertical"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/myprofilelayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"/>
            <TextView

                android:id="@+id/myprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:layout_marginLeft="72dp"
                android:textSize="@dimen/drawer_font_text"
                android:textColor="@color/color_app_text_dark"
                android:layout_gravity="center_vertical"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/settingslayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/settings"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/mypreferences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:layout_marginLeft="72dp"
                android:textSize="@dimen/drawer_font_text"
                android:textColor="@color/color_app_text_dark"
                android:layout_gravity="center_vertical"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/offerslayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/offers"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/offers"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offers"
                android:layout_marginLeft="72dp"
                android:textSize="@dimen/drawer_font_text"
                android:textColor="@color/color_app_text_dark"
                android:layout_gravity="center_vertical"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/faqlayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/faqs"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/faq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAQs"
                android:layout_marginLeft="72dp"
                android:textSize="@dimen/drawer_font_text"
                android:textColor="@color/color_app_text_dark"
                android:layout_gravity="center_vertical"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/llaskforquery"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/need"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tvaskforquery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Support"
                android:layout_marginLeft="72dp"
                android:textSize="@dimen/drawer_font_text"
                android:textColor="@color/color_app_text_dark"
                android:layout_gravity="center_vertical"/>
        </FrameLayout>
    </LinearLayout>

</ScrollView>