<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <LinearLayout
        android:id="@+id/llOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/otphardtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="OTP has been sent to your mobile"
            android:textColor="#9e9e9e"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/enterotp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter OTP"
                android:textColor="#5d5d5d"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/otpedittext"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_rounded_grey_border"
                android:paddingLeft="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
           >

            <Button
                android:id="@+id/resendotp"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_strk_blue"
                android:text="RESEND OTP"
                android:textColor="@color/btn_color"
                android:textSize="14sp" />

            <Button
                android:id="@+id/continuewithotp"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_background"
                android:text="CONTINUE"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/llMobileNumber"
        android:layout_margin="20dp"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Please confirm your mobile number"
            android:id="@+id/textView6"
            android:textSize="16sp"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#5d5d5d"/>
        <EditText
            android:id="@+id/etMobileNumber"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:hint="Mobile Number"
            android:textSize="14sp"
            android:background="@drawable/bg_rounded_grey_border"
            android:paddingLeft="8dp"
            />
        <EditText
            android:id="@+id/etReferralCode"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:hint="Referral Code (optional)"
            android:textSize="14sp"
            android:background="@drawable/bg_rounded_grey_border"
            android:paddingLeft="8dp"
            />
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_background"
            android:text="SUBMIT"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            />
    </LinearLayout>




</RelativeLayout>