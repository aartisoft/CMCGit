<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/myprofilerl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:orientation="vertical">

    <include
        android:id="@+id/header1"
        layout="@layout/header_for_menus"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/profile_bg"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profilebannerimage"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/avatar_drawer" />

        <TextView
            android:id="@+id/profilebannerusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Amit Kumar"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    </LinearLayout>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
               android:id="@+id/card_view2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/card_left_margin"
               android:layout_marginRight="@dimen/card_right_margin"
               android:layout_marginTop="12dp"
               app:cardBackgroundColor="#ffffff">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:paddingBottom="20dp"
                   android:paddingLeft="16dp"
                   android:paddingRight="16dp"
                   android:paddingTop="16dp"
                   android:visibility="visible"
                   >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="45dp"
                       android:background="#e8e8e8"
                       android:orientation="horizontal">


                       <EditText
                           android:id="@+id/fullnameedittext"
                           android:layout_width="0dp"
                           android:layout_height="40dp"
                           android:layout_weight="1"
                           android:background="#00000000"
                           android:ems="10"
                           android:gravity="center_vertical"
                           android:hint="Name"
                           android:inputType="textPersonName"
                           android:paddingLeft="8dp"
                           android:textSize="14sp" />

                       <FrameLayout
                           android:layout_width="45dp"
                           android:layout_height="45dp"
                           android:background="@color/color_blue">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:layout_gravity="center"
                               android:src="@drawable/profile_user" />
                       </FrameLayout>
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       android:layout_marginTop="8dp"
                       android:background="#e8e8e8"
                       android:orientation="horizontal">


                       <EditText
                           android:id="@+id/mobileedittext"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:background="#00000000"
                           android:ems="10"
                           android:gravity="center_vertical"
                           android:hint="Mobile Number"
                           android:inputType="textPersonName"
                           android:paddingLeft="8dp"
                           android:textSize="14sp" />

                       <FrameLayout
                           android:layout_width="45dp"
                           android:layout_height="45dp"
                           android:background="@color/color_blue">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:layout_gravity="center"
                               android:src="@drawable/profile_mobile" />
                       </FrameLayout>
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="45dp"
                       android:layout_marginTop="8dp"
                       android:background="#e8e8e8"
                       android:orientation="horizontal">


                       <EditText
                           android:id="@+id/emailedittext"
                           android:layout_width="0dp"
                           android:layout_height="40dp"
                           android:layout_weight="1"
                           android:background="#00000000"
                           android:ems="10"
                           android:gravity="center_vertical"
                           android:hint="Email"
                           android:inputType="textPersonName"
                           android:paddingLeft="8dp"
                           android:textSize="14sp" />

                       <FrameLayout
                           android:layout_width="45dp"
                           android:layout_height="45dp"
                           android:background="@color/color_blue">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:layout_gravity="center"
                               android:src="@drawable/profile_mail" />
                       </FrameLayout>

                   </LinearLayout>

                   <LinearLayout
                       android:id="@+id/lldobedittext"
                       android:layout_width="match_parent"
                       android:layout_height="45dp"
                       android:layout_marginTop="8dp"
                       android:background="#e8e8e8"
                       android:orientation="horizontal">


                       <TextView
                           android:id="@+id/dobedittext"
                           android:layout_width="0dp"
                           android:layout_height="40dp"
                           android:layout_weight="1"
                           android:background="#00000000"
                           android:ems="10"
                           android:gravity="center_vertical"
                           android:hint="DOB"
                           android:inputType="textPersonName"
                           android:paddingLeft="8dp"
                           android:textSize="14sp"
                           />

                       <FrameLayout
                           android:layout_width="45dp"
                           android:layout_height="45dp"
                           android:background="@color/color_blue">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:layout_gravity="center"
                               android:src="@drawable/profile_calender" />
                       </FrameLayout>
                   </LinearLayout>

                   <LinearLayout
                       android:id="@+id/llgenderedittext"
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       android:layout_marginTop="8dp"
                       android:background="#e8e8e8"
                       android:orientation="horizontal">


                       <TextView
                           android:id="@+id/genderedittext"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:background="#00000000"
                           android:ems="10"
                           android:gravity="center_vertical"
                           android:hint="Gender"
                           android:inputType="textPersonName"
                           android:paddingLeft="8dp"
                           android:textSize="14sp"
                           android:clickable="false"/>

                       <FrameLayout
                           android:layout_width="45dp"
                           android:layout_height="45dp"
                           android:background="@color/color_blue">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:layout_gravity="center"
                               android:src="@drawable/profile_gender" />
                       </FrameLayout>
                   </LinearLayout>

               </LinearLayout>

           </android.support.v7.widget.CardView>
           <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
               android:id="@+id/card_view3"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginLeft="@dimen/card_left_margin"
               android:layout_marginRight="@dimen/card_right_margin"
               android:layout_marginTop="8dp"
               app:cardBackgroundColor="#ffffff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="3dp"
                    >
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <TextView
                           android:id="@+id/tvAddDetail"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:text="Add Vehicle Details"
                           android:textSize="18sp"
                           android:textAppearance="?android:attr/textAppearanceMedium"
                           android:textColor="@color/color_app_blue"
                           android:layout_marginBottom="8dp"
                           android:layout_marginTop="5dp"/>
                        <FrameLayout
                            android:id="@+id/flCross"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:visibility="gone">
                            <ImageView
                                android:id="@+id/ivCross"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/close"/>

                        </FrameLayout>
                   </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llVehicleDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:orientation="vertical"
                        android:visibility="gone">


                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vehicle Model"
                            android:textSize="16sp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/color_app_text_dark" />

                        <AutoCompleteTextView
                            android:id="@+id/etModel"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:textSize="14sp"
                            android:background="@drawable/bg_rect_grey_fill"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:paddingLeft="8dp"
                            android:textColor="#5d5d5d"
                            android:hint="Search a model"
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            />


                        <TextView
                            android:id="@+id/tvRegno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Registration Number"
                            android:textSize="16sp"
                            android:layout_marginTop="16dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/color_app_text_dark" />

                        <EditText
                            android:id="@+id/etRegistrationNo"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_rect_grey_fill"
                            android:ems="10"
                            android:layout_marginTop="8dp"
                            android:textColor="#5d5d5d"
                            android:paddingLeft="8dp"
                            android:textSize="14sp"
                            android:hint="Enter Registration"
                            android:gravity="center"

                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp">

                            <CheckBox
                                android:id="@+id/ch1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Commercial Vehicle?"
                                android:textSize="16sp"

                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/color_app_text_dark" />


                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="12dp"/>
                    </LinearLayout>

                </LinearLayout>
           </android.support.v7.widget.CardView>
           <LinearLayout
               android:id="@+id/llDrivingLicence"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center_vertical"
               android:orientation="horizontal"
               android:layout_marginTop="12dp"
               android:layout_marginLeft="8dp"
               android:layout_marginRight="8dp"
               android:visibility="gone">

               <CheckBox
                   android:id="@+id/ch2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:checked="true" />

               <TextView
                   android:id="@+id/textView2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="I have valid driving license and vehicle insurance"
                   android:textAppearance="?android:attr/textAppearanceMedium"
                   android:textColor="@color/color_app_text_dark"
                   android:textSize="14sp" />


           </LinearLayout>

           <View
               android:layout_width="match_parent"
               android:layout_height="5dp"
               android:background="#00000000"/>
       </LinearLayout>
   </ScrollView>

    <Button
        android:id="@+id/updateprofile"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_btn_background"
        android:text="Update"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />


</LinearLayout>