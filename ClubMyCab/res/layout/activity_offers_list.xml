<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/offersListTopLL"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/color_dark_blue"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Offers"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewOffersCredits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/offersListTopLL"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Your Club Points : "
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/textViewUseOffersCredits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewOffersCredits"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="Use your Club Points to settle your fare split"
        android:textColor="#000000"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/textViewUseOffersCredits"
        android:layout_margin="10dp"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/listViewOffers"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </ListView>

    </LinearLayout>

</RelativeLayout>
