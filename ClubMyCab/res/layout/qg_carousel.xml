<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/qg_status_bar_slider_content"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_marginTop="64dp"
			android:layout_gravity="bottom"
			android:layout_height="192dp"
			android:background="@android:color/transparent"
			android:orientation="horizontal">
		<ImageView
				android:id="@+id/qg_carousel_1"
				android:layout_width="192dp"
				android:layout_height="192dp"
				android:scaleType="centerInside"
				android:layout_gravity="top|left"
				android:layout_marginRight="5dp"/>
		<ImageView
				android:id="@+id/qg_carousel_2"
				android:layout_width="192dp"
				android:layout_height="192dp"
				android:scaleType="centerInside"
				android:layout_gravity="top|right"
				android:layout_marginRight="5dp"/>
	</LinearLayout>
	<FrameLayout
			android:id="@+id/qg_notification_image_full_content_view"
			android:layout_width="match_parent"
			android:layout_height="64dp">
		<ImageView
				android:id="@+id/qg_app_icon_image"
				android:layout_width="64dp"
				android:layout_height="64dp"
				android:padding="12dp"
				android:scaleType="centerInside"/>
		<LinearLayout
				android:id="@+id/line1"
				android:layout_width="match_parent"
				android:layout_marginStart="64dp"
				android:minHeight="64dp"
				android:layout_gravity="bottom"
				android:layout_height="wrap_content"
				android:layout_marginEnd="8dp"
				android:orientation="vertical">
			<TextView
					android:id="@+id/qg_title"
					android:textColor="#de000000"
					android:textSize="16sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:singleLine="true"
					android:layout_marginTop="6dp"
					android:ellipsize="marquee"
					android:fadingEdge="horizontal"/>
			<TextView
					android:id="@+id/qg_message"
					android:textSize="14sp"
					android:layout_width="wrap_content"
					android:layout_height="36dp"
					android:layout_gravity="center_vertical"
					android:textColor="#66000000"
					android:maxLines="2"
					android:ellipsize="marquee"
					android:fadingEdge="horizontal"/>
		</LinearLayout>
	</FrameLayout>
	<FrameLayout
			android:id="@+id/actions"
			android:layout_gravity="center"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginTop="32dp"
			android:background="@android:color/transparent">
		<ImageButton
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:scaleType="fitXY"
				android:id="@+id/qg_next_button"
				android:background="@android:color/transparent"
				android:layout_gravity="right"/>
		<ImageButton
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:scaleType="fitXY"
				android:id="@+id/qg_prev_button"
				android:background="@android:color/transparent"
				android:layout_gravity="left"/>
	</FrameLayout>
</FrameLayout><!-- From: file:/data/qgraph/mobile/Module_Develop/QG/src/main/res/layout/qg_carousel.xml -->