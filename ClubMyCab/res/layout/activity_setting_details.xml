<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsrl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <include
        android:id="@+id/header1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/header" />

    <RelativeLayout
        android:id="@+id/pushnotificationsonoffrl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/header1"
        android:background="#F0F0F0"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="Push Notifications"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/pushonoffimg"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/pushnotificationsonoffrl"
        android:alpha="0.3"
        android:background="#000000" />

    <RelativeLayout
        android:id="@+id/sharelocationtimerl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/view1"
        android:background="#F0F0F0"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sharelocationtimerlhereiam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="Here, I am"
            android:textColor="#000000"
            android:textSize="16sp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sharelocationtimerlhereiam"
            android:layout_marginLeft="10dp"
            android:text="(Send Location Interval)"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/sharelocationtimevalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="5 minutes"
            android:textColor="#000000"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>