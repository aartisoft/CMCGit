<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        >
        <FrameLayout
            android:id="@+id/flUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ivMemberImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                />

        </FrameLayout>

        <TextView
            android:id="@+id/tvMemberName"
            android:layout_toRightOf="@+id/flUser"
            android:layout_toLeftOf="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/color_blue"
            android:layout_marginLeft="5dp"
            android:text="Emy Jackson"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tvStatus"
            android:layout_toLeftOf="@+id/ivCallBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_app_text_light"
            android:layout_marginLeft="12dp"
            android:text="Awaiting"
            android:layout_centerVertical="true"
            android:layout_marginRight="80dp"/>
        <ImageView
            android:id="@+id/ivCallBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call"
            android:layout_toLeftOf="@+id/ivCrossBtn"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"/>
        <ImageView
            android:id="@+id/ivCrossBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/close"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>