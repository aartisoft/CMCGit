<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/memberclubnameinpopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#000000"
        android:gravity="center"
        android:padding="5dp"
        android:text="Club Name"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/listmemberclubpopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nameofclub"
        android:layout_below="@+id/memberclubnameinpopup" >
    </ListView>

    <TextView
        android:id="@+id/nameofclub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/memberrefermorecontacts"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="(Friends who have joined ClubMyCab will have profile image or logo against their name)"
        android:textColor="#9e9e9e"
        android:textSize="12sp" />

    <Button
        android:id="@+id/memberrefermorecontacts"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#4279bd"
        android:text="Refer More Members"
        android:textColor="#ffffff"
        android:textSize="17sp" />

</RelativeLayout>